body
	padding: 50px
	padding-bottom:0px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
	color: #00B7FF

.starter-template
	padding: 40px 15px
	text-align: center

//Navbar

.navbar-custom
	background-color: #fff
	border-bottom: 2px solid #563d7c

.navbar-custom .navbar-nav > li > a 
	color: #fff


.navbar-custom .navbar-nav > .active > a, .navbar-nav > .active > a:hover, .navbar-nav > .active > a:focus 
	color: #ffffff
	background-color: transparent


.navbar-custom .navbar-brand 
	color: #000

.working-area, .working-area > textarea, .working-area > pre 
	resize: vertical /* user can resize vertically, but width is fixed */
	height: 500px
	margin: 0px

//Button Classes (Outline)

.btn-outline 
	background-color: transparent
	color: inherit
	transition: all .5s

.btn-primary.btn-outline 
	border-color: #563d7c
	color: #563d7c

.btn-primary.btn-outline:hover 
	background-color: #563d7c
	color: #fff

//Footer
.footer
	position: relative;
	bottom: 0;
	width: 100%;
	/* Set the fixed height of the footer here */
	height: 60px;

//Fixes

.JsonKeyValues div 
	margin: 2px

.form-group > * 
	margin: 0.2em 0.2em !important

//Syntax Highlighting

pre outline: 
	1px solid #ccc padding: 5px margin: 5px 

.string  
	color: green 

.number  
	color: darkorange

.boolean  
	color: blue 

.null  
	color: magenta 

.key  
	color: red 

//Helper Classes

.margin-top-05 
	margin-top: 0.5em

.margin-top-10 
	margin-top: 1.0em

.margin-top-15 
	margin-top: 1.5em

.margin-top-20 
	margin-top: 2.0em

.margin-top-25 
	margin-top: 2.5em

.margin-top-30 
	margin-top: 3.0em